{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "ROBOT IS DEBUG",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/ROBOT.py",
			"console": "integratedTerminal",
			"justMyCode": false
		},
		{
			"name": "WEBAPP SERVER IS DEBUG",
			"type": "debugpy",
			"request": "launch",
			"module": "uvicorn",
			"args": [
				"WEBAPP:app",
				"--host=0.0.0.0",
				"--port=5000",
				"--reload",
				"--reload-exclude", ".*, node_modules/**/*, frontend/**/*"
			],
			"env": {
				"PYTHON_ENV": "development",
				"WATCHFILES_FORCE_POLLING": "true"
			},
			"justMyCode": false
		},
		{
			"name": "WEBAPP CLIENT IS DEBUG",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/frontend",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev"],
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{
			"name": "CHROME IS OPEN",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:5000/webapp-is-you",
			"webRoot": "${workspaceFolder}/frontend"
		}
	],
	"compounds": [
		{
			"name": "WEBAPP IS DEBUG AND OPEN",
			"configurations": [
				"WEBAPP SERVER IS DEBUG",
				"WEBAPP CLIENT IS DEBUG",
				"CHROME IS OPEN"
			]
		}
	]
}
