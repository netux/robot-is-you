{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "ROBOT IS DEBUG",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/ROBOT.py",
			"console": "integratedTerminal",
			"justMyCode": false
		},
		{
			"name": "WEBAPP SERVER IS DEBUG",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/WEBAPP.py",
			"env": {
				"QUART_DEBUG": "true"
			},
			"jinja": true,
			"justMyCode": false
		},
		{
			"name": "WEBAPP CLIENT IS DEBUG",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/frontend",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev"],
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{
			"name": "CHROME IS OPEN",
			"type": "chrome",
			"request": "launch",
			"urlFilter": "http://localhost:5000/webapp-is-you/*",
			"webRoot": "${workspaceFolder}/frontend"
		}
	],
	"compounds": [
		{
			"name": "WEBAPP IS DEBUG AND OPEN",
			"configurations": [
				"WEBAPP SERVER IS DEBUG",
				"WEBAPP CLIENT IS DEBUG",
				"CHROME IS OPEN"
			]
		}
	]
}
