	"version": "0.2.0",
	"configurations": [
		{
			"name": "ROBOT IS DEBUG",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/ROBOT.py",
			"console": "integratedTerminal",
			"justMyCode": false
		},
		{
			"name": "WEBAPP IS DEBUG",
			"type": "python",
			"request": "launch",
			"module": "flask",
			"env": {
				"FLASK_APP": "WEBAPP.py",
				"FLASK_ENV": "development"
			},
			"args": [
				"run",
				"--no-debugger"
			],
			"jinja": true,
			"justMyCode": true
		}
	]
}
